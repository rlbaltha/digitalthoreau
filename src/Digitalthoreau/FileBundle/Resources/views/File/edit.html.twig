{# Digitalthoreau/FileBundle/Resources/views/File/edit.html.twig #}

{% extends 'DigitalthoreauFileBundle::layout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/digitalthoreauhome/js/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block body -%}
<script language="javascript"> 
$(document).ready(function()
{
CKEDITOR.replace( 'digitalthoreau_filebundle_filetype_notes',  {
    customConfig: '{{ asset('bundles/digitalthoreauhome/js/ckeditor_local/ckeditor_config.js') }}',
    height: 300,
} );
});
</script>

    <h1>File edit</h1>

    <form action="{{ path('file_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('file') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('file_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
